{
  "manifest_version": 3,
  "name": "AutoForm Filler",
  "version": "1.0",
  "description": "Autofills name and email fields across websites.",
  "permissions": ["storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
